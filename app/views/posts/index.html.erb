<% provide(:title, "Home") %>

<div class="jumbotron">

  <div class="row search-form">
    <form>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <input type="text" class="form-control" name="Name" autocomplete="off" id="Name" placeholder="#hashtag">
          </div>
        </div>
        <div class="col-md-1" style="padding: 12px 0px;">
          <input type="submit" value="Search!" class="btn main-btn pull-right"/>
        </div>
      </div>
    </form>
  </div>

  <div class="row post-form">
    <%= form_for(@post) do |f| %>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.text_area :text, class: 'form-control textarea', rows: '3', placeholder: 'Lorem ipsum...' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.submit "Post it!", class: "btn main-btn pull-right" %>
          </div>
        </div>
    <% end %>
  </div>

  <div class="row posts">
    <% @posts.each do |p| %>
        <div class="row post-item">
          <div class="col-md-12">
            <div class="post-author">
              <p>@anonymous</p>
            </div>

            <div class="post-text multiline">
              <p><%= p.text %></p>
            </div>

            <div class="post-date">
              <p>Posted 1 day ago</p>
            </div>
          </div>
        </div>
    <% end %>
  </div>

</div>
